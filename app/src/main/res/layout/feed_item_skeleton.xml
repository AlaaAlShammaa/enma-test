<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootCV"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="12dp"
        app:cardElevation="4dp"
        android:background="@drawable/rounded_loader_shape"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/parentCL"
            android:layout_width="match_parent"
            android:minHeight="300dp"
            android:background="@drawable/rounded_loader_shape"
            android:layout_height="wrap_content">
        <View
                android:id="@+id/thumbnailIV"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="250dp"/>
        <View
                android:id="@+id/captionTV"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/thumbnailIV"
                android:textSize="@dimen/large_font"
                android:background="@drawable/rounded_loader_shape"
                android:padding="16dp"
                android:layout_height="48dp"/>

        <View
                android:id="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/captionTV"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_below="@id/captionTV"
                android:layout_height="1dp"/>
        <View
                android:id="@+id/profileIV"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@id/divider"
                android:layout_marginEnd="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_loader_shape"/>

        <View
                android:id="@+id/usernameTV"
                android:layout_width="128dp"
                android:padding="16dp"
                android:layout_toStartOf="@id/profileIV"
                android:layout_alignBaseline="@id/profileIV"
                android:layout_below="@id/divider"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_loader_shape"
                android:layout_height="32dp"/>

        <View
                android:id="@+id/thumbUpCountTV"
                android:layout_width="60dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_below="@id/divider"
                android:layout_marginTop="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_loader_shape"
                android:layout_height="16dp"/>
        <View
                android:id="@+id/commentCountTV"
                android:layout_width="60dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_loader_shape"
                android:layout_below="@id/divider"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/thumbUpCountTV"
                android:layout_height="16dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>